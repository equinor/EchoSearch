{
    "compilerOptions": {
        // basic options
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",

        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "declaration": true,

        // type checking
        "strict": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "alwaysStrict": false,

        // must be set to true because we rely on babel to transpile.
        "noEmit": true,
        "sourceMap": true,

        // others
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowUnusedLabels": true
    },
    "include": ["src", "public"]
}
